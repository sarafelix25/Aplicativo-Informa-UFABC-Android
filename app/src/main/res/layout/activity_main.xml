<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60sp"
        android:layout_height="100sp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="-340dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/nomeApp"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/logo"/>

    <ImageView
        android:id="@+id/nomeApp"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_marginTop="-340dp"
        android:contentDescription="@string/nomeApp"
        android:src="@drawable/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="205sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/green"
        android:maxLines="15"
        android:text="Restaurante UniversitÃ¡rio"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="60dp"
        app:icon="@drawable/icon_ru"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/restaurante"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="205sp"
        android:layout_height="90sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/green"
        android:text="Fretado"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="60dp"
        app:icon="@drawable/bus"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/fretado" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="205sp"
        android:layout_height="90sp"
        android:backgroundTint="@color/green"
        android:text="Agenda"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="60dp"
        app:icon="@drawable/agenda"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button2"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/agenda"/>

</androidx.constraintlayout.widget.ConstraintLayout>